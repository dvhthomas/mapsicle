{
  "compilerOptions": {
    "checkJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.js", "src/**/*.svelte"],
  "exclude": ["node_modules", "build", ".svelte-kit"]
}
